<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/style.css" type="text/css" rel="stylesheet">
    <title>Manual Parsing (Separate Actions)</title>
</head>
<body>
    <nav>
        <header>Backend2</header>
        <a href="/">Home</a>
    </nav>
    <main>
        <h1>Manual Parsing in Separate Actions</h1>

        @if (ViewBag.Num1 == null)
        {
            <form method="post" action="/Calc/ManualParsingSeparateFirst">
                <div>
                    <label for="num1">First Number:</label>
                    <input type="number" id="num1" name="num1" required>
                </div>
                <button type="submit">Next</button>
            </form>
        }
        else
        {
            <form method="post" action="/Calc/ManualParsingSeparateSecond">
                <input type="hidden" name="num1" value="@ViewBag.Num1" />
                <div>
                    <label for="num2">Second Number:</label>
                    <input type="number" id="num2" name="num2" required>
                </div>
                <div>
                    <label for="operation">Operation:</label>
                    <select id="operation" name="operation">
                        <option value="add">+</option>
                        <option value="subtract">-</option>
                        <option value="multiply">*</option>
                        <option value="divide">/</option>
                    </select>
                </div>
                <button type="submit">Submit</button>
            </form>

            @if (ViewBag.Result != null)
            {
                <h2>Result: @ViewBag.Result</h2>
            }

            @if (ViewBag.ErrorMessage != null)
            {
                <h2 style="color: red;">@ViewBag.ErrorMessage</h2>
            }
        }
    </main>
    <footer>©2024 - Backend2</footer>
</body>
</html>
